<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="css/showroom.css">
    <%- include("head.ejs")%>
    <title>Showroom</title>
</head>
<body>
<%- include("header.ejs")%>

<div class="container">
    <div id='map'></div>
    <script>
        function initMap() {
            var myOptions = {
                zoom: 15,
                center: new google.maps.LatLng(20.9929572,105.8054076),
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            map = new google.maps.Map(document.getElementById('map'), myOptions);
            marker = new google.maps.Marker({
                map: map,
                position: new google.maps.LatLng(20.9929572,105.8054076)
            });
            infowindow = new google.maps.InfoWindow({
                content: '<img src="imgs/Logo.png" alt="" style="width:90px; ">' +
                    '<b>A1 - Uniforms</b>' +
                    '<p>Showroom<br>275 Nguyễn Trãi - Thanh Xuân - HN<br>' +
                    '<a href="tel:0943326689" style="color: black">0943326689</a>' +
                    '<p><a href="mailto:A1.uniforms@gmail.com" style="color: black">A1.uniforms@gmail.com</a></p>' +
                    'Mở cửa: 8:00 - 20:30<br>' +
                    '<a href="https://www.google.com/maps/dir//275+Nguy%E1%BB%85n+Tr%C3%A3i,+Thanh+Xu%C3%A2n+Trung,+Thanh+Xu%C3%A2n,' +
                    '+H%C3%A0+N%E1%BB%99i/@20.9929572,105.8054076,17z/data=!3m1!4b1!4m9!4m8!1m0!1m5!1m1!1s0x3135acbf6af3c44f:' +
                    '0xed2a3283251a5bf7!2m2!1d105.8075963!2d20.9929572!3e2" style="color: black">Tìm đường đi</a>'
            });
            google.maps.event.addListener(marker, 'click', function() {
                infowindow.open(map, marker);
            });
            infowindow.open(map, marker);
        }
        google.maps.event.addDomListener(window, 'load', initMap);


    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDgp-L9m8_XoajN489T7W8RIzay70l8GeU&callback=initMap"
            type="text/javascript"></script>
    </script>
</div>

<%- include("footer.ejs")%>
</body>
</html>