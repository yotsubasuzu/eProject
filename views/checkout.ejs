<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Payment - A1 Uniform</title>
    <link rel="stylesheet" href="libs/bootstrap-3.4.1/css/bootstrap.min.css" id="bootstrap-css">
    <script src="libs/jquery/jquery-3.5.1.min.js"></script>
</head>
<body>
<div class="container wrapper">
    <div class="row cart-head">
        <div class="container">
            <div class="row">
                <p></p>
            </div>
            <!--<div class="row">
                <div style="display: table; margin: auto;">
                    <span class="step step_complete"> <a href="#" class="check-bc">Cart</a> <span class="step_line step_complete"> </span> <span class="step_line backline"> </span> </span>
                    <span class="step step_complete"> <a href="#" class="check-bc">Checkout</a> <span class="step_line "> </span> <span class="step_line step_complete"> </span> </span>
                    <span class="step_thankyou check-bc step_complete">Thank you</span>
                </div>
            </div> -->

            <div class="row">
                <p></p>
            </div>
        </div>
    </div>

    <div class="row cart-body">
        <form class="form-horizontal" method="post" action="">
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 col-md-push-2 col-sm-push-2">
                <!--REVIEW ORDER-->
                <div class="panel panel-info">
                    <div class="panel-heading">
                        Review Order
                    </div>
                    <div class="panel-body">
                        <% if(products !== null) { products.forEach(function(e){%>
                            <div class="form-group">

                                <div class="col-sm-3 col-xs-3">
                                    <img class="img-responsive" src="<%= e.item[0].Images %>" />
                                </div>
                                <div class="col-sm-6 col-xs-6">
                                    <div class="col-xs-12"><%= e.item[0].NameProd %></div>
                                    <div class="col-xs-12"><small>Quantity:<span><%= e.quantity%></span></small></div>
                                    <button id="add" name="buy" type="button"><a href="/remove/<%= e.item[0].IdProd %>">Remove</a></button>
                                </div>
                                <div class="col-sm-3 col-xs-3 text-right">
                                    <h6><span>$</span><%= e.price %></h6>
                                </div>
                            </div>
                            <div class="form-group"><hr /></div>
                        <% }) } %>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <strong>Order Total</strong>
                                <% var myPrice = 0 %>
                                <% if(products !== null) { products.forEach(function(e) { myPrice += e.price } ) } else { myPrice } %>
                                <div class="pull-right"><span>$</span><span><%= myPrice %></span></div>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <a href="/billing-shipping" style="color:white"><button type="button" class="btn btn-primary btn-submit-fix">Check out</button></a>
                            </div>
                        </div>
                    </div>
                </div>
                <!--REVIEW ORDER END-->
            </div>

        </form>
    </div>
</div>
</body>
</html>