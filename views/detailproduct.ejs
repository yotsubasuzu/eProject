<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("head.ejs")%>
    <link rel="stylesheet" href="css/btbody.css">
    <link rel="stylesheet" href="css/btdetail.css">
    <title>Detail Products</title>
</head>
<body>
<%- include("header.ejs")%>

<section class="section main">
    <div class="col-md-12">
        <div class="container">
            <div class="row">
                <article class="content col-md-9 col-sm-6 col-xs-12">
                    <% sp.forEach(function(e){%>
                        <div class="content-img col-md-6">
                            <div class="pr-img">
                                <img class="picture" src="<%= e.Images %>">
                            </div>
                        </div>
                        <div class="pr-info col-md-6">
                            <div class="top-info">
                                <h2 class="pr-name"><%= e.NameProd %></h2>
                                <p class="pr-cost">$<%= e.Price %></p>
                                <p class="material"> Material: Draper</p>
                                <button id="wholesale" type="button" href="#" class="btn btn-lg" data-toggle="modal"
                                        data-target="#saleModal">
                                <i class="fas fa-shopping-basket"></i>  Get a wholesale quote
                                </button>
                                <div class="modal fade" id="saleModal" tabindex="-1" role="dialog" aria-labelledby="modalSale">
                                    <div class="modal-dialog modal-sm" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                <h4 class="modal-title" id="modalSale">Please enter enough information, we will send you a quote!</h4>
                                            </div>
                                            <div class="modal-body">
                                                <form action="#" method="get">
                                                    <div class="form-group">
                                                        <label>Full Name</label>
                                                        <input type="text" name="Name" placeholder="Full name.." class="form-control" required/>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="customerPhone">Phone Number</label>
                                                        <input type="text" name="Phone" placeholder="Phone Number.." class="form-control" required/>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Items</label>
                                                        <input type="text" name="Items" placeholder="Name Items.." class="form-control" required/>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Amount</label>
                                                        <input type="number" name="Amount" placeholder="Amount.." class="form-control" required/>
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                <button type="button" class="btn btn-primary" >Send</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="size">
                                <p class="size-now">Size :<span class="now" id="now"> 7</span></p>
                                <ul class="pr-sizes">
                                    <li><button value="7" name="number-size" id="nsize" type="button">7</button></li>
                                    <li><button value="8" name="number-size" id="nsize" type="button">8</button></li>
                                    <li><button value="9" name="number-size" id="nsize" type="button">9</button></li>
                                    <li><button value="10" name="number-size" id="nsize" type="button">10</button></li>
                                    <li><button value="11" name="number-size" id="nsize" type="button">11</button></li>
                                </ul>
                            </div>
                            <div class="amount">
                                <p class="tittle-amount">Amount</p>
                                <form method="post" action="#">
                                    <div class="choose-amount">
                                        <input onclick="var result = document.getElementById('quantity');
                                                    var qty = result.value;
                                                    if(qty > 1 ) result.value--;"
                                               type='button' id="cre" value='-' />

                                        <input id='quantity' min='1' name='quantity' type='number' value='1' />

                                        <input onclick="var result = document.getElementById('quantity');
                                                    var qty = result.value;
                                                    result.value++;"
                                               type='button' id="cre" value='+' />
                                    </div>
                                    <div class="buy-pr">
                                        <button id="add" name="buy" type="button"><a href="/add/<%= e.IdProd %>">ADD TO CART</a></button>
                                        <button id="buy" name="buy" type="button">BUY NOW</button>
                                    </div>
                                    <div class="order">
                                        <p>FAST ORDER SUPPORT</p>
                                        <button id="phone" type="button"><i class="fas fa-phone-alt"> 0987654321</i></button>
                                        <button id="phone" type="button"><i class="fas fa-phone-alt"> 0123456789</i></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="pr-des col-md-12">
                            <h3>Product details</h3>
                            <div class="p-des">
                                <p class="p-des-name">Education Science High School uniform felt jacket</p>
                                <p>Color: Dark blue</p>
                                <p>Material: Felt fabric</p>
                                <p>The Science Education High School uniform felt jacket can be combined with a shirt, pants or a skirt</p>
                                <p>To find the right size, please see the information <a href="#">HERE</a></p>
                            </div>
                        </div>
                    <%})%>
                </article>
                <aside class="sidebar col-md-3 col-sm-6 col-xs-12">
                    <div class="sidebar-img col-md-12">
                        <img src="imgs/detail/img_1.png" height="466" width="400"/>
                    </div>
                    <div class="related-pr col-md-12">
                        <div class="sidebar-tittle">
                            <span>RELATED PRODUCTS</span>
                        </div>
                        <hr>
                        <div class="list-related">
                            <div class="item-related">
                                <div class="item-image">
                                    <a href="#"><img src="imgs/row1_1.png"</a>
                                </div>
                                <div class="item-info ">
                                    <h3 class="cap">
                                        <a href="#">Long-hands Hes uniform dress - Level 3</a>
                                    </h3>
                                </div>
                            </div>
                            <div class="item-related">
                                <div class="item-image">
                                    <a href="#"><img src="imgs/row2_1.png"</a>
                                </div>
                                <div class="item-info ">
                                    <h3 class="cap">
                                        <a href="#">Vest men Viet Duc uniform - Level 3</a>
                                    </h3>
                                </div>
                            </div>
                            <div class="item-related">
                                <div class="item-image">
                                    <a href="#"><img src="imgs/row2_2.png"</a>
                                </div>
                                <div class="item-info ">
                                    <h3 class="cap">
                                        <a href="#">Women's uniform Tran Phu - Level 3</a>
                                    </h3>
                                </div>
                            </div>
                            <div class="item-related">
                                <div class="item-image">
                                    <a href="#"><img src="imgs/row3_1.png"</a>
                                </div>
                                <div class="item-info ">
                                    <h3 class="cap">
                                        <a href="#">Viet Duc female vest dresses - Level 3</a>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</section>

<%- include("footer.ejs")%>
</body>
</html>