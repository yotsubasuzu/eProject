<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("head.ejs")%>
    <link rel="stylesheet" href="css/btbody.css">
    <link rel="stylesheet" href="css/btdetail.css">
    <link rel="stylesheet" href="libs/easyzoom/easyzoom.css">
    <script src="libs/ejs/ejs.min.js"></script>
    <script src="libs/jquery/jquery-3.5.1.min.js"></script>
    <script src="libs/bootstrap-3.4.1/js/bootstrap.js"></script>
    <script src="libs/easyzoom/easyzoom.js"></script>
    <% sp.forEach(function(e){%>
    <title><%= e.NameProd %></title>
    <%})%>
</head>
<body>

<%- include("header.ejs")%>

<section class="section main">
    <div class="col-md-12">
        <div class="container">
            <div class="row">
                <article class="content col-md-9 col-sm-6 col-xs-12">
                    <% sp.forEach(function(e){%>
                        <div class="content-img col-md-6">
                            <div class="pr-img">
                                <div class="easyzoom easyzoom--overlay vision">
                                    <a href="<%= e.Images %>">
                                        <img class="picture" src="<%= e.Images %>" alt="">
                                    </a>
                                </div>
                            </div>
                            <div class="thumbnails">
                                <ul>
                                    <li class="col-md-3">
                                        <a href="<%= e.Images %>"
                                           data-standard="imgs/detail/thumb/img_3.png">
                                            <img src="imgs/detail/thumb/img_3.png" alt="">
                                        </a>
                                    </li>
                                    <li class="col-md-3">
                                        <a href="imgs/detail/thumb/img_2.png"
                                           data-standard="imgs/detail/thumb/img_2.png">
                                            <img src="imgs/detail/thumb/img_2.png" alt="">
                                        </a>
                                    </li>
                                    <li class="col-md-3">
                                        <a href="imgs/detail/thumb/img_1.png"
                                           data-standard="imgs/detail/thumb/img_1.png">
                                            <img src="imgs/detail/thumb/img_1.png" alt="">
                                        </a>
                                    </li>
                                    <li class="col-md-3">
                                        <a href="imgs/detail/thumb/img.png"
                                           data-standard="imgs/detail/thumb/img.png">
                                            <img src="imgs/detail/thumb/img.png" alt="">
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <script type="text/javascript">
                            // Instantiate EasyZoom instances
                            var easyzoom = $('.vision').easyZoom();
                            var api = easyzoom.data('easyZoom');

                            $('ul').on('click', 'a', function(event) {
                                event.preventDefault();
                                api.swap($(this).data('standard'), $(this).attr('href'));
                            });
                        </script>
                        <div class="pr-info col-md-6">
                            <div class="top-info">
                                <h2 class="pr-name"><%= e.NameProd %></h2>
                                <p class="pr-cost">$<%= e.Price %></p>
                                <p class="material"> Material: Draper</p>
                                <button id="wholesale" type="button" href="#" class="btn btn-lg" data-toggle="modal"
                                        data-target="#saleModal">
                                <i class="fas fa-shopping-basket"></i>  Get a wholesale quote
                                </button>
                                <div id="myModal" class="modal">
                                    <div class="modal-dialog modal-xs">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title" id="modalSale">Please enter enough information, we will send you a quote!</h4>
                                                <span class="close" style="color: #222222">&times;</span>                                            </div>
                                            <div class="modal-body">
                                                <form action="#" method="get">
                                                    <div class="form-group">
                                                        <label>Full Name</label>
                                                        <input type="text" name="Name" required placeholder="Full name.." class="form-control"/>
                                                    </div>
                                                    <div class="form-group" id="form-left">
                                                        <label class="customerPhone">Phone Number</label>
                                                        <input type="text" name="Phone" required placeholder="Phone Number.." class="form-control"/>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Items</label>
                                                        <input type="text" name="Items" required placeholder="Name Items.." class="form-control"/>
                                                    </div>
                                                    <div class="form-group" id="form-left">
                                                        <label>Amount</label>
                                                        <input type="number" name="Amount" required placeholder="Amount.." class="form-control"/>
                                                    </div>
                                                    <div class="form-group" id="submit">
                                                        <button type="submit" class="btn">Send</button>
                                                        <button type="button" class="btn" id="closeModal">Cancel</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <script>
                                var modal = document.getElementById('myModal');
                                var btn = document.getElementById("wholesale");
                                var span = document.getElementsByClassName("close")[0];
                                var cancle = document.getElementById("closeModal");
                                btn.onclick = function() {
                                    modal.style.display = "block";
                                }
                                span.onclick = function() {
                                    modal.style.display = "none";
                                }
                                cancle.onclick = function(){
                                    modal.style.display = "none";
                                }
                                window.onclick = function(event) {
                                    if (event.target == modal) {
                                        modal.style.display = "none";
                                    }
                                }
                            </script>
                            <div class="size">
                                <p class="size-now">Size:<span class="now" id="now"> Choose size</span></p>
                                <ul class="pr-sizes">
                                    <li><button value="7" name="number-size" id="nsize" type="button">7</button></li>
                                    <li><button value="8" name="number-size" id="nsize" type="button">8</button></li>
                                    <li><button value="9" name="number-size" id="nsize" type="button">9</button></li>
                                    <li><button value="10" name="number-size" id="nsize" type="button">10</button></li>
                                    <li><button value="11" name="number-size" id="nsize" type="button">11</button></li>
                                </ul>
                            </div>
                            <script>
                                var change_size = document.getElementsByName("number-size");
                                for(var i=0;i<change_size.length;i++) {
                                    change_size[i].onclick = function () {
                                        document.getElementById('now').innerHTML = ' ' + this.innerHTML;
                                    };
                                }
                            </script>
                            <div class="amount">
                                <p class="title-amount">Amount</p>
                                <form method="post" action="#">
                                    <div class="choose-amount">
                                        <input onclick="var result = document.getElementById('quantity');
                                                    var qty = result.value;
                                                    if(qty > 1 ) result.value--;"
                                               type='button' id="cre" value='-' />

                                        <input id='quantity' min='1' name='quantity' type='number' value='1' />

                                        <input onclick="var result = document.getElementById('quantity');
                                                    var qty = result.value;
                                                    result.value++;"
                                               type='button' id="cre" value='+' />
                                    </div>
                                    <div class="buy-pr">
                                        <a href="/add/<%= e.IdProd %>"><button id="add" name="buy" type="button">ADD TO CART</button></a>
                                        <button id="buy" name="buy" type="button">BUY NOW</button>
                                    </div>
                                    <div class="order">
                                        <p>FAST ORDER SUPPORT</p>
                                        <button id="phone" type="button"><i class="fas fa-phone-alt"> 0987654321</i></button>
                                        <button id="phone" type="button"><i class="fas fa-phone-alt"> 0123456789</i></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="pr-des col-md-12">
                            <h3>Product details</h3>
                            <div class="p-des">
                                <p class="p-des-name">Education Science High School uniform felt jacket</p>
                                <p>Color: Dark blue</p>
                                <p>Material: Felt fabric</p>
                                <p>The Science Education High School uniform felt jacket can be combined with a shirt, pants or a skirt</p>
                                <p>To find the right size, please see the information <a href="#">HERE</a></p>
                            </div>
                        </div>
                    <%})%>
                </article>
                <aside class="sidebar col-md-3 col-sm-6 col-xs-12">
                    <div class="sidebar-img col-md-12">
                        <img src="imgs/img_1.png" height="466" width="400"/>
                    </div>
                    <div class="related-pr col-md-12">
                        <div class="sidebar-title">
                            <span>RELATED PRODUCTS</span>
                        </div>
                        <hr>
                        <div class="list-related">
                            <% gp.forEach(function(e){%>
                                <div class="item-related">
                                    <div class="item-image">

                                        <a href="/detailproduct?NameProd='<%= e.NameProd %>'">
                                            <img src="<%= e.Images %>">
                                        </a>

                                    </div>
                                    <div class="item-info ">
                                        <h3 class="cap">
                                            <a href="/detailproduct?NameProd='<%= e.NameProd %>'"><%= e.NameProd %></a>
                                        </h3>
                                    </div>
                                </div>
                            <%})%>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</section>

<%- include("footer.ejs")%>


</body>
</html>